<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>ee.ria.riha</groupId>
	<artifactId>browser</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>RIHA-Browser</name>
	<description></description>

	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>1.4.2.RELEASE</version>
		<relativePath/> <!-- lookup parent from repository -->
	</parent>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<java.version>1.8</java.version>
		<yarn-args>${yarn.args}</yarn-args>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-freemarker</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>

		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-devtools</artifactId>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-databind</artifactId>
			<version>2.8.4</version>
		</dependency>
		<dependency>
			<groupId>org.projectlombok</groupId>
			<artifactId>lombok</artifactId>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.json</groupId>
			<artifactId>json</artifactId>
			<version>20160810</version>
		</dependency>

	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<configuration>
					<executable>true</executable>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.kelveden</groupId>
				<artifactId>maven-karma-plugin</artifactId>
				<version>1.6</version>
				<executions>
					<execution>
						<goals>
							<goal>start</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<browsers>PhantomJS2</browsers>
					<configFile>karma-conf.js</configFile>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.github.eirslett</groupId>
				<artifactId>frontend-maven-plugin</artifactId>
				<version>1.4</version>
				<executions>
					<execution>
						<id>install node and yarn</id>
						<phase>none</phase>
						<goals>
							<goal>install-node-and-yarn</goal>
						</goals>
					</execution>
					<execution>
						<id>install-node-modules</id>
						<phase>none</phase>
						<goals>
							<goal>yarn</goal>
						</goals>
					</execution>
					<execution>
						<id>install-bower</id>
						<phase>none</phase>
						<goals>
							<goal>yarn</goal>
						</goals>
						<configuration>
							<arguments>run bower</arguments>
						</configuration>
					</execution>
					<execution>
						<id>upgrade-frontend-packages</id>
						<!--
                         You can create configuration, but advice to run the command from real console:
                         mvn frontend:yarn@upgrade-frontend-packages
                        -->
						<phase>none</phase>
						<goals>
							<goal>yarn</goal>
						</goals>
						<configuration>
							<arguments>upgrade-interactive</arguments>
						</configuration>
					</execution>
					<execution>
						<id>build</id>
						<phase>none</phase>
						<goals>
							<goal>yarn</goal>
						</goals>
						<configuration>
							<arguments>run build</arguments>
						</configuration>
					</execution>
					<execution>
						<id>lint</id>
						<phase>none</phase>
						<goals>
							<goal>yarn</goal>
						</goals>
						<configuration>
							<arguments>run lint</arguments>
						</configuration>
					</execution>
					<execution>
						<id>test</id>
						<phase>none</phase>
						<goals>
							<goal>yarn</goal>
						</goals>
						<configuration>
							<arguments>run test</arguments>
						</configuration>
					</execution>
					<execution>
						<id>args</id>
						<phase>none</phase>
						<goals>
							<goal>yarn</goal>
						</goals>
						<configuration>
							<arguments>${yarn-args}</arguments>
						</configuration>
					</execution>
				</executions>
				<configuration>
					<nodeVersion>v6.10.1</nodeVersion>
					<yarnVersion>v0.25.2</yarnVersion>
					<npmVersion>4.4.4</npmVersion>
					<workingDirectory>src/frontend</workingDirectory>
				</configuration>
			</plugin>
		</plugins>
	</build>


</project>
